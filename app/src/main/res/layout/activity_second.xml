<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vid.record.second">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:id="@+id/imageView"
        android:src="@drawable/dancer"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="By the way, what had you been doing before you picked up the phone?"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Walking "
        android:id="@+id/radioButton"
        android:checked="false"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sitting "
        android:id="@+id/radioButton2"
        android:layout_below="@+id/radioButton"
        android:layout_alignLeft="@+id/radioButton"
        android:layout_alignStart="@+id/radioButton"
        android:layout_marginTop="7dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reclining"
        android:id="@+id/radioButton3"
        android:checked="false"
        android:layout_below="@+id/imageView7"
        android:layout_alignLeft="@+id/radioButton2"
        android:layout_alignStart="@+id/radioButton2"
        android:layout_marginTop="8dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lying"
        android:id="@+id/radioButton4"
        android:checked="false"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/radioButton3"
        android:layout_toRightOf="@+id/imageView9"
        android:layout_toEndOf="@+id/imageView9" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"
        android:layout_alignTop="@+id/radioButton"
        android:layout_toLeftOf="@+id/radioButton2"
        android:src="@mipmap/walking"
        android:layout_above="@+id/radioButton2"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView7"
        android:layout_below="@+id/radioButton"
        android:layout_toLeftOf="@+id/radioButton2"
        android:src="@mipmap/sitting"
        android:layout_alignBottom="@+id/radioButton2"
        android:layout_alignLeft="@+id/imageView6"
        android:layout_alignStart="@+id/imageView6" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView8"
        android:src="@mipmap/reclining"
        android:layout_alignLeft="@+id/imageView7"
        android:layout_alignStart="@+id/imageView7"
        android:layout_above="@+id/radioButton4"
        android:layout_alignTop="@+id/radioButton3"
        android:layout_alignRight="@+id/imageView7"
        android:layout_alignEnd="@+id/imageView7" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView9"
        android:src="@mipmap/bed"
        android:layout_toLeftOf="@+id/radioButton3"
        android:layout_alignBottom="@+id/radioButton4"
        android:layout_alignTop="@+id/radioButton4"
        android:layout_alignLeft="@+id/imageView8"
        android:layout_alignStart="@+id/imageView8" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="RECORD THAT TOO"
        android:id="@+id/button"
        android:background="#F80232"
        android:textColor="#FFFFFF"
        style="@style/Widget.AppCompat.Button.Colored"
        android:allowUndo="false"
        android:clickable="true"
        android:layout_marginBottom="26dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="record2"/>

</RelativeLayout>
