<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vid.record.Form">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/test"/>

    <EditText
        android:id="@+id/weight_form"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Weight in kg" />

    <EditText
        android:id="@+id/body_fluid_form"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Body fluid percentage" />

    <EditText
        android:id="@+id/heart_rate_form"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Heart rate per minute" />

    <EditText
        android:id="@+id/circumference_form"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="circumference in cm" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Position of the patient"
        android:id="@+id/Position_text"/>

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioButton android:id="@+id/standing_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Standing/upright"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/Sitting_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sitting"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/Reclining_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reclining"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/Lying_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lying"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>

    <Button
        android:id="@+id/button_send_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEND MESSAGE"
        android:onClick="sendMessage"
        />

</TableLayout>
